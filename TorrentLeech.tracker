<trackerinfo
	type="tl"
	shortName="TL"
	longName="TorrentLeech"
	siteName="www.torrentleech.org">

	<settings>
		<description text="Their RSS download links are buggy. Use the cookie method (and leave rsskey blank) unless you know what you're doing."/>
		<cookie_description text="FireFox -> Preferences -> Privacy -> Show Cookies and find torrentleech. The cookie line should look like: tluid=12345; tlpass=asdfqwerhqwjerhjasdfhasdfsafd"/>
		<cookie isDownloadVar="false"/>
		<textbox
			name="rsskey"
			text="rsskey"
			accesskey="r"
			tooltiptext="The rsskey in your TorrentLeech RSS feed link."
			emptytext="TorrentLeech rsskey"
			pasteGroup="rsskey"
			pasteRegex="/([\da-fA-F]{20})"
			isDownloadVar="false"
			/>
	</settings>

	<servers>
		<server
			network="TorrentLeech.org"
			serverNames="irc.torrentleech.org"
			channelNames="#torrentleech"
			announcerNames="_AnnounceBot_"
			/>
	</servers>

	<parseinfo>
		<linepatterns>
			<extract>
				<!--New Torrent Announcement: <Games :: Wii>  Name:'PokePark Pikachus Adventure REPACK USA WII-dumpTruck' uploaded by 'Anonymous' -  http://www.torrentleech.org/torrent/263302-->
				<regex value="^New Torrent Announcement:\s*&lt;([^&gt;]*)&gt;\s*Name:'(.*)' uploaded by '([^']*)'\s*-\s*https?\:\/\/([^\/]+\/)torrent/(\d+)"/>
				<vars>
					<var name="category"/>
					<var name="torrentName"/>
					<var name="uploader"/>
					<var name="$baseUrl"/>
					<var name="$torrentId"/>
				</vars>
			</extract>
		</linepatterns>
		<linematched>
			<if srcvar="cookie" regex="\S">
				<var name="torrentUrl">
					<string value="http://"/>
					<var name="$baseUrl"/>
					<string value="download/"/>
					<var name="$torrentId"/>
					<string value="/"/>
					<varenc name="torrentName"/>
					<string value=".torrent"/>
				</var>
				<http name="Cookie">
					<var name="cookie"/>
				</http>
			</if>
			<if srcvar="cookie" regex="^\s*$">
				<var name="torrentUrl">
					<string value="http://"/>
					<var name="$baseUrl"/>
					<string value="rss/download/"/>
					<var name="$torrentId"/>
					<string value="/"/>
					<var name="rsskey"/>
					<string value="/"/>
					<varenc name="torrentName"/>
					<string value=".torrent"/>
				</var>
			</if>
		</linematched>
		<ignore>
		</ignore>
	</parseinfo>
</trackerinfo>
